<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APOMaui.OperationsTab"
             Title="Other">
    <VerticalStackLayout>
        <Button x:Name="ButtonSplit" Text="Split RGB" Clicked="OnButtonSplitClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonNegative" Text="Negative" Clicked="OnButtonNegativeClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonPosterize" Text="Posterize" Clicked="OnButtonPosterizeClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonHough" Text="Hough Lines" Clicked="OnButtonHoughClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonPyr" Text="Pyramid" Clicked="OnButtonPyrClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonInpaint" Text="Inpaint" Clicked="OnButtonInpaintClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonAnalize" Text="Analize" Clicked="OnButtonAnalizeClick" StyleClass="MainPageButton"/>



    </VerticalStackLayout>
</ContentPage>