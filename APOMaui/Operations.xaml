<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APOMaui.Operations"
             Title="Operations">
    <VerticalStackLayout>
        <Button x:Name="ButtonGrayScale" Text="RGB->Grayscale" Clicked="OnButtonGrayScaleClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonHSV" Text="RGB->HSV" Clicked="OnButtonHSVClick" StyleClass="MainPageButton"/>
        <Button x:Name="ButtonSplit" Text="Split RGB" Clicked="OnButtonSplitClick" StyleClass="MainPageButton"/>
    </VerticalStackLayout>
</ContentPage>