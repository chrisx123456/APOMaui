<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APOMaui.MainPage"
             Title="File">
    <ScrollView>
        <VerticalStackLayout IsVisible="True" x:Name="FileTab">
            
            <Button x:Name="ButtonOpen" Text="Open" Clicked="OnOpenButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonClose" Text="Close" Clicked="OnCloseButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonSave" Text="Save" Clicked="OnSaveButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonSaveAs" Text="Save As" Clicked="OnSaveAsButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonRLE" Text="RLE" Clicked="OnRLEButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonAbout" Text="About" Clicked="OnAboutButtonClicked" StyleClass="MainPageButton"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
