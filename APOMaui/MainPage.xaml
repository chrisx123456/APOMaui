<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APOMaui.MainPage">
    <ScrollView>
        <VerticalStackLayout IsVisible="True" x:Name="FileTab">
            
            <Button x:Name="ButtonOpen" Text="Otwórz" Clicked="OnOpenButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonClose" Text="Zamknij" Clicked="OnCloseButtonClicked" StyleClass="MainPageButton"/>
            <Button x:Name="ButtonSave" Text="Zapisz" Clicked="OnSaveButtonClicked" StyleClass="MainPageButton"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
